@using EntityLayer.Concrete;
@model EmployeePayment
@{
    ViewData["Title"] = "CreateEmployeePayment";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var dolar = ViewBag.Dolar;
    var euro = ViewBag.Euro;
}

<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            
            <form asp-action="CreateEmployeePayment" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <select class="form-control" name="AppUserId">
                        <option value="" disabled selected>Personel seçin.</option>

                        @foreach (AppUser user in ViewBag.AppUser)
                        {
                            <option value="@user.Id">@user.UserName</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label>Tutar</label>
                    <input asp-for="Amount" type="text" required class="form-control" />
                </div>
                <div class="form-group">
                    <label>Dolar Kuru</label>
                    <input asp-for="Dolar" type="text" required value="@dolar" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Euro Kuru</label>
                    <input asp-for="Euro" type="text" required value="@euro" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Ödeme Açıklaması</label>
                    <input asp-for="Explanation" type="text" required class="form-control" />
                </div>

                <button type="submit" class="btn btn-primary">Kaydet</button>
            </form>
        </div>
    </div>
</div>
